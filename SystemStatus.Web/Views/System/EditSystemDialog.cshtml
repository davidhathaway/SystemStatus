@model EditSystemCommand

<div class="modal fade" id="system-edit-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit System</h4>
            </div>
            <div class="modal-body" id="system-edit-modal-body">

                @using (Html.BeginForm("EditSystemDialog", "System", FormMethod.Post, new { @class = "form", id = "system-edit-form" }))
                {
                    <fieldset>

                        <legend>Edit - Form</legend>

                            @Html.HiddenFor(x => x.SystemGroupID)


                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.ParentGroupID)
                                    @Html.DropDownListFor(m => m.ParentGroupID, Model.PossibleParentGroups.ToSelectListWithNone(), new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name, new  { @class="form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.IsSystemCritical)
                                    @Html.CheckBoxFor(m => m.IsSystemCritical, new { @class = "form-control" })
                                </div>
                            </div>

                    </fieldset>

                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default create-dialog-save">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
     
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->